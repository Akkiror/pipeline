pipeline {
agent {
        label 'slave'
    }
stages {
        stage('Build') {
            steps {
                echo 'Building..'
				sh 'sudo bash ./build'
				
            }
        }
        stage('deploy') {
            steps {
                echo 'Deploying to TEST environment..'
				sh 'sudo bash ./deploy'
            }
        }
        stage('test') {
            steps {
                echo 'Testing....'
				sh 'sudo bash ./test'
					}
				}
    }
}